proxmox = {
  name         = "node" # Name of the Proxmox node
  cluster_name = "node" # Must match the Proxmox cluster name
  endpoint     = "https://node.example.com:8006"
  insecure     = false
  username     = "root"
  api_token    = "root@pam!secret"
}
# The Proxmox API token format is: <username>@<realm>!<name>=<token>

# for loadbalancers
auth_pass = "choose-a-strong-secret-here"

lb_store = "rpool2"

# Kubernetes bootstrap secrets
# Get your Bitwarden Secrets Manager access token from: https://vault.bitwarden.com/#/sm/
bitwarden_token = "0.xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Git repository URL for ArgoCD (customize for forks)
# git_repository_url = "https://github.com/yourusername/homelab.git"

# ============================================================================
# Remote State Configuration (Backblaze B2)
# ============================================================================
# Uncomment and configure these variables to enable remote state storage
# See website/docs/tofu/remote-state.md for setup instructions

# Backend bucket configuration
# backend_bucket_name   = "homelab-terraform-state"
# backend_state_key     = "proxmox/terraform.tfstate"
# backend_region        = "us-west-000"
# backend_endpoint      = "https://s3.us-west-000.backblazeb2.com"

# B2 Credentials (obtain from Backblaze B2 console)
# IMPORTANT: Keep these credentials secure!
# backend_access_key_id     = "YOUR_B2_KEY_ID"
# backend_secret_access_key = "YOUR_B2_APPLICATION_KEY"

# Encryption passphrase for state and plan encryption
# IMPORTANT: Store this securely! You'll need it for all future operations.
# encryption_passphrase = "your-secure-encryption-passphrase"
