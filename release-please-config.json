{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "changelog-type": "github",
  "release-search-depth": 1000,
  "commit-search-depth": 1500,
  "separate-pull-requests": false,
  "pull-request-title-pattern": "release: v${version}",
  "pull-request-header": "Homelab infrastructure release v${version}.\n\nThis pull request contains all merged changes since the previous release. See the changelog below for details.",
  "pull-request-footer": "Found an issue or have suggestions? Open an issue or start a discussion on GitHub.",
  "plugins": [
    { "type": "node-workspace" }
  ],
  "packages": {
    ".": {
      "release-type": "simple",
      "changelog-path": "CHANGELOG.md",
      "include-v-in-tag": true,
      "changelog-sections": [
        {
          "type": "feat",
          "section": "Features"
        },
        {
          "type": "fix",
          "section": "Fixes"
        },
        {
          "type": "docs",
          "section": "Documentation"
        },
        {
          "type": "chore",
          "section": "Maintenance"
        },
        {
          "type": "refactor",
          "section": "Refactoring"
        }
      ]
    }
  },
  "include-component-in-tag": false
}
